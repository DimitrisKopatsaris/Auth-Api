{
  "id": null,
  "uid": "auth-api-obsv",
  "title": "Auth API - Observability (Day 1)",
  "timezone": "",
  "version": 1,
  "schemaVersion": 38,
  "refresh": "5s",
  "time": { "from": "now-6h", "to": "now" },
  "tags": ["authapi", "observability", "prometheus", "loki"],
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests / sec (RPS)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum(rate(http_requests_total[$__rate_interval]))",
          "legendFormat": "RPS"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (%)",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "100 * ( sum(rate(http_requests_total{status_code=~\"5..\"}[$__rate_interval])) / clamp_min(sum(rate(http_requests_total[$__rate_interval])), 1e-9) )",
          "legendFormat": "5xx %"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Success Rate (%)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "100 * ( sum(rate(http_requests_total{status_code=~\"2..|3..\"}[$__rate_interval])) / clamp_min(sum(rate(http_requests_total[$__rate_interval])), 1e-9) )",
          "legendFormat": "2xx/3xx %"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "P95 Latency (ms)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "histogram_quantile(0.95, sum by (le) (rate(microsoft_aspnetcore_hosting_http_server_request_duration_bucket[$__rate_interval]))) * 1000",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "P99 Latency (ms)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "histogram_quantile(0.99, sum by (le) (rate(microsoft_aspnetcore_hosting_http_server_request_duration_bucket[$__rate_interval]))) * 1000",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Active Requests",
      "gridPos": { "x": 0, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum(microsoft_aspnetcore_hosting_http_server_active_requests)",
          "legendFormat": "active"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "CPU (%)",
      "gridPos": { "x": 8, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "system_runtime_cpu_usage * 100",
          "legendFormat": "CPU"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Memory (Working Set)",
      "gridPos": { "x": 16, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "process_working_set_bytes",
          "legendFormat": "working set"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] }
    },
    {
      "type": "table",
      "title": "Top Endpoints by Error Rate (5xx req/s)",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } },
        { "id": "reduce", "options": { "reducers": ["lastNotNull"] } },
        { "id": "sortBy", "options": { "fields": {}, "sort": [ { "field": "Last *", "desc": true } ] } }
      ],
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum by (route, method) (rate(http_requests_total{status_code=~\"5..\"}[$__rate_interval]))",
          "legendFormat": "{{route}} {{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "req/s", "custom": { "align": "right" } },
        "overrides": []
      },
      "options": { "showHeader": true }
    },
    {
      "type": "logs",
      "title": "Auth API Logs (Loki)",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 12 },
      "options": {
        "dedupStrategy": "none",
        "prettifyLogMessage": true,
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{app=\"auth-api\"} | json | line_format \"{{.level}} {{.msg}} cid={{.cid}}\""
        }
      ]
    }
  ]
}
